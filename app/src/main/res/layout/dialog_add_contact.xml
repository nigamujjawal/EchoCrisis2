<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/card_elevated">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Emergency Contact"
        style="@style/HeadingText"
        android:textSize="22sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the details of your emergency contact"
        style="@style/CaptionText"
        android:layout_marginBottom="24dp" />

    <!-- Name Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Name"
        style="@style/TextLabel"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/etDialogContactName"
        style="@style/InputField"
        android:hint="e.g., Mom, Dad, Sister"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp" />

    <!-- Phone Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        style="@style/TextLabel"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/etDialogContactPhone"
        style="@style/InputField"
        android:hint="e.g., +91 9876543210"
        android:inputType="phone"
        android:layout_marginBottom="16dp" />

    <!-- Relationship Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relationship (Optional)"
        style="@style/TextLabel"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/etDialogContactRelationship"
        style="@style/InputField"
        android:hint="e.g., Family, Friend, Neighbor"
        android:inputType="text"
        android:layout_marginBottom="24dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:text="Cancel"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:minWidth="100dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/btn_primary"
            android:text="Save Contact"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:minWidth="120dp"
            android:layout_marginStart="12dp"
            android:elevation="2dp" />

    </LinearLayout>

</LinearLayout>
