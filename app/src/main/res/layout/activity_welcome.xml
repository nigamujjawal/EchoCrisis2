<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_bg_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Top Section with Branding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="80dp"
            android:paddingBottom="40dp"
            android:paddingHorizontal="32dp">

            <!-- App Logo Circle -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp">

                <View
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/card_elevated"
                    android:elevation="8dp" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_sos"
                    android:tint="@color/accent" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvWelcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to EchoCrisis"
                style="@style/HeadingTextLight"
                android:textSize="30sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvWelcomeSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Safety Companion"
                style="@style/SubheadingTextLight"
                android:layout_marginTop="12dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Features Preview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:layout_marginBottom="32dp">

            <!-- Feature 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@color/secondary_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One-tap SOS emergency alerts"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Feature 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@color/secondary_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect with emergency services"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Feature 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@color/secondary_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Access support resources 24/7"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <Button
                android:id="@+id/btnGetStarted"
                style="@style/PrimaryButton"
                android:text="Get Started"
                android:background="@drawable/card_elevated"
                android:textColor="@color/primary"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:text="Already have an account? Sign In"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
